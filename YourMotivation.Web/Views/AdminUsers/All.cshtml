@using YourMotivation.Web.Models.Pagination;
@using YourMotivation.Web.Models.Pagination.AdminUsers;

@addTagHelper "*, YourMotivation.Web"

@model AdminUsersPageViewModel
@{
  ViewBag.Title = Localizer["All users"];
}

<h2>@ViewBag.Title</h2>

@Html.Partial("_StatusMessage", Model.StatusMessage)

<form asp-action="All" method="get">
  <div class="form-actions no-color">
    <p>
      @Localizer["Find by username"]:
      <input type="text" name="usernameFilter" value="@Model.UsernameFilter" />
      <input type="submit" value="@Localizer["Search"]" class="btn btn-default" />
      @if (!string.IsNullOrEmpty(Model.UsernameFilter))
      {
        <a asp-action="All">@Localizer["Back to full list"]</a>
      }
    </p>
  </div>
</form>

<table class="table">
  <thead>
    <tr>
      <th>
        <sort-header action="All" page-model=@Model column=@SortColumnName.Username>
          @Html.DisplayNameFor(model => model.Default.Username)
        </sort-header>
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Default.Email)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Default.EmailConfirmed)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Default.Role)
      </th>
      <th>
        <sort-header action="All" page-model=@Model column=@SortColumnName.CreatedDate>
          @Html.DisplayNameFor(model => model.Default.CreatedDate)
        </sort-header>
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Default.PhoneNumber)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.Records)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.EmailConfirmed)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
          <a asp-action="Manage" asp-route-id="@item.Id">@Localizer["Manage"]</a>
        </td>
      </tr>
    }
  </tbody>
</table>

@{
  var prevClassDisabled = Model.HasPreviousPage ? string.Empty : "disabled";
  var nextClassDisabled = Model.HasNextPage ? string.Empty : "disabled";
  var controllerName = "AdminUsers";
  var actionName = "All";
}

<div class="row" style="text-align: center;">
  <ul class="pagination">
    <li class="@prevClassDisabled">
      <a asp-controller=@controllerName
         asp-action=@actionName
         asp-route-pageIndex=@(Model.CurrentPage - 1)
         asp-route-usernameFilter=@Model.UsernameFilter
         asp-route-sortOrder=@Model.SortViewModel.CurrentState>
        <i class="glyphicon glyphicon-chevron-left"></i>
        @Localizer["Previous"]
      </a>
    </li>
    @foreach (var pageNumber in Enumerable.Range(1, Model.TotalPages))
    {
      string isActive = pageNumber == Model.CurrentPage ? "active" : string.Empty;

      <li class="@isActive">
        <a asp-controller=@controllerName
           asp-action=@actionName
           asp-route-pageIndex=@pageNumber
           asp-route-usernameFilter=@Model.UsernameFilter
           asp-route-sortOrder=@Model.SortViewModel.CurrentState>
          @pageNumber
        </a>
      </li>
    }
    <li class="@nextClassDisabled">
      <a asp-controller=@controllerName
         asp-action=@actionName
         asp-route-pageIndex=@(Model.CurrentPage + 1)
         asp-route-usernameFilter=@Model.UsernameFilter
         asp-route-sortOrder=@Model.SortViewModel.CurrentState>
        @Localizer["Next"]
        <i class="glyphicon glyphicon-chevron-right"></i>
      </a>
    </li>
  </ul>
</div>
